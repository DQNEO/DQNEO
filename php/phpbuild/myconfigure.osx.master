#!/bin/bash
# OSX用のPHP configureスクリプト
# /opt にlibmcrytpが入ってる前提です。

# `brew install bison`が必要
export YACC=/usr/local/Cellar/bison/3.0.4/bin/bison
export ARCHFLAGS="-arch x86_64"
prefix="/opt/php"
./configure --prefix=$prefix \
            --enable-debug \
            --enable-cli \
            --enable-json \
            --enable-mbstring \
            --enable-xml \
            --enable-zip \
            --enable-ftp \
            --enable-exif \
            --enable-fileinfo \
            --enable-pcntl \
            --enable-pdo \
            --enable-opcache \
            --enable-phpdbg  \
            --enable-session \
            --enable-fpm \
            --enable-phar \
            --with-curl \
            --with-gd \
            --with-openssl \
            --with-mcrypt=/opt \
            --with-zlib  \
            --with-apxs2 \
            --with-mysqli=mysqlnd \
            --with-pdo-mysql=mysqlnd \
            --disable-cgi

